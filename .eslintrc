{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            1,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-var": [
            2
        ],
        "prefer-const": [
            2
        ],
        "prefer-arrow-callback": [
            2
        ],
        "strict": [2],
        "eqeqeq": [
            2
        ]
    }

}
